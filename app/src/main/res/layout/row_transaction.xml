<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView android:id="@+id/row_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="26dp"
        android:layout_margin="10dp"
        android:text="WITHDRAW"
        android:layout_alignParentLeft="true"

        />

    <TextView android:id="@+id/row_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="26dp"
        android:text="PHP 6,789.00"
        android:layout_alignBaseline="@+id/row_description"
        android:layout_alignBottom="@+id/row_description"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />



    <TextView android:id="@+id/row_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="26dp"
        android:layout_margin="10dp"
        android:text="Jan 2017"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:layout_below="@id/row_description"
        />

</RelativeLayout>
